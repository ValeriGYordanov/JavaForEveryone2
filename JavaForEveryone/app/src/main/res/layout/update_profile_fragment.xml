<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_final_app">

    <LinearLayout xmlns:android=
        "http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="last.project.javaforeveryone.controller.UpdateProfile">

        <ImageView
            android:id="@+id/imgProfileChange"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnProfileImgUpload"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Upload Image"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/txtUserPts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mid_txt"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:maxLength="40"
                android:maxLines="1"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtUserCurrentStage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mid_txt"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:maxLength="40"
                android:maxLines="1"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/txtUsernameChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:maxLength="40"
                android:maxLines="1"
                android:hint="change username"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/txtOldPasswordChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:maxLength="40"
                android:textColorHint="@color/colorWhite"
                android:maxLines="1"
                android:hint="old password"
                android:textColor="@color/colorWhite"
                android:inputType="textPassword"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/txtPassChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:textColorHint="@color/colorWhite"
                android:maxLength="20"
                android:maxLines="1"
                android:hint="new password"
                android:inputType="textPassword"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/txtPassConfirmChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:maxLength="20"
                android:maxLines="1"
                android:hint="confirm password"
                android:inputType="textPassword"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnProfileCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnProfileUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Update"
                android:textAllCaps="false"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>