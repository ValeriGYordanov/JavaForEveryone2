<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="@dimen/mid_margin"
        android:layout_weight="15"
        android:background="@drawable/button_background_shape_square"
        >
        <TextView
            android:id="@+id/txt_title_rec_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mid_txt"
            android:textColor="@color/colorWhite"
            android:layout_margin="@dimen/mid_margin"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_desc_rec_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/small_txt"
                android:textColor="@color/colorWhite"
                android:layout_margin="@dimen/mid_margin"
                android:layout_weight="3"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/img_ach_rec_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription"
                android:src="@drawable/ic_achievement_icon"
                android:scaleType="fitXY"
                android:layout_weight="2"
                android:visibility="invisible"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/points_txt"
            android:textSize="@dimen/mid_txt"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="@dimen/extra_big_margin"
            android:layout_marginLeft="@dimen/extra_big_margin"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/txt_points_rec_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mid_txt"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="@dimen/big_margin"
            android:layout_marginRight="@dimen/big_margin"
            android:gravity="end"
            android:layout_weight="1"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBlack"
        android:layout_margin="@dimen/mid_margin"
        >
    </View>

</LinearLayout>