<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exam_row_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:padding="15sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/test_background"
        android:orientation="vertical">
            <TextView
                android:id="@+id/txt_recycler_question"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:layout_margin="@dimen/mid_margin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/mid_txt"
                />

            <RadioButton
                android:id="@+id/chk_recycler_answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/small_txt" />

            <RadioButton
                android:id="@+id/chk_recycler_answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/small_txt" />

            <RadioButton

                android:id="@+id/chk_recycler_answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/small_txt" />

<LinearLayout
    android:id="@+id/layout_help_exam"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/mid_margin"
    android:visibility="gone"
    >
    <Button
        android:id="@+id/btn_help"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ic_btn_help"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/txt_count_exam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_margin="@dimen/mid_margin"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/mid_txt"
        android:gravity="center"

        <Button
            android:id="@+id/btn_help"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="Помощ"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>